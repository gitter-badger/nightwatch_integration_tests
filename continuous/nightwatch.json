{
    "src_folders": [ "./" ],
    "custom_commands_path": "../integration/commands/",
    "custom_assertions_path": "../integration/assertions/",
    "selenium": {
        "start_process": true,
        "server_path": "../lib/selenium-server-standalone.jar",
        "log_path": "tests_output",
        "host": "127.0.0.1",
        "port": 4444,
        "cli_args": {
            "webdriver.log.file": "console.log"
        }
    },
    "test_settings": {
        "default": {
            "launch_url": "http://www.binary.com",
            "selenium_host": "127.0.0.1",
            "selenium_port": 4444,
            "silent": true,
            "disable_colors": false,
            "screenshots": {
                "enabled": false,
                "path": ""
            },
            "desiredCapabilities": {
                "browserName": "firefox",
                "javascriptEnabled": true,
                "acceptSslCerts": true
            }
        }
    }
}
